<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
  </div>

  <div class="order-details">
    <h2>Order Details</h2>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Image</th>
          <th>Name</th>
          <th>Description</th>
          <th>Quantity</th>
          <th>Line Item Total</th>
        </tr>
      </thead>
      <tbody>
        <% @order.line_items.each do |line_item| %>
          <tr>
            <td><%= image_tag line_item.product.image.thumb.url, alt: line_item.product.name, class: 'img-thumbnail' %></td>
            <td><%= line_item.product.name %></td>
            <td><%= line_item.product.description %></td>
            <td><%= line_item.quantity %></td>
            <td style=" font-family: Montserrat; color: rgba(0, 130, 29, 0.7); font-weight: 700;">
            <%= humanized_money_with_symbol line_item.total_price %></td>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">Final Amount:</th>
          <th style=" font-family: Montserrat; color: rgba(0, 130, 29, 0.7); font-weight: 700;">
          <%= humanized_money_with_symbol @order.total_cents / 100.00 %></th>
        </tr>
      </tfoot>
    </table>
    
    <p>Email used for this order: <%= @order.email %></p>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
